<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:orientation = "vertical"
    android:background="@mipmap/study2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcomeView"
        android:text=",,WELLCOME TO"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@android:color/holo_blue_dark"
        android:padding="5px"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/welcomeView"
        android:layout_marginTop="20dp"
        android:weightSum="4">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="YOUR STUDY,,"
            android:textColor="@android:color/black"
            android:textSize="35sp"
            android:textStyle="bold"
            android:background="@android:color/holo_blue_dark"
            />


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/ChooseSemester"
        android:id="@+id/ChooseSemester"
        android:textColor="@color/background_floating_material_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_selector"

        android:touchscreenBlocksFocus="false"
        android:transitionGroup="false"
        android:visibility="visible"
        android:nestedScrollingEnabled="true"
        android:spinnerMode="dialog"
        android:layout_above="@+id/trigger"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="71dp"
        >

        </Spinner>

    <Button
        android:id="@+id/trigger"
        android:onClick="onClick"
        android:text="@string/button_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textStyle="bold"
        android:background="@color/background_material_dark"
        > </Button>





</RelativeLayout>
